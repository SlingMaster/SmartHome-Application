<resources>

    <!-- Base application theme. -->
    <!--    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar"> -->

    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="android:navigationBarColor">@color/colorNavBar</item>
    </style>


    <!-- стиль для текста -->
    <style name="MyTextAppearance" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/actionbar_text_color</item>
    </style>

    <style name="MyActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@color/actionbar_background</item>
        <item name="android:titleTextStyle">@style/MyTextAppearance</item>
    </style>

    <style name="AppActivityTheme" parent="AppTheme">
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">false</item>
        <item name="android:colorBackground">@color/colorPrimaryDark</item>
        <item name="android:colorForeground">@android:color/darker_gray</item>
        <!--item name="android:colorBackground">@color/colorPreferencesBg</item>
        <item name="android:colorForeground">@color/item_text_time</item-->
        <item name="android:textColorPrimary">@android:color/secondary_text_light_nodisable</item>
        <item name="android:paddingLeft">@dimen/list_padding</item>
        <item name="android:paddingRight">@dimen/list_padding</item>
        <item name="android:textAlignment">center</item>
        <!--        <item name="android:textColorPrimary">@color/colorAccent</item>-->
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="PreferencesTheme" parent="Base.Theme.AppCompat">
        <item name="android:windowBackground">@color/colorPreferencesBg</item>
        <item name="android:colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">#FFFFFF</item>
        <item name="android:textColor">#cfd8dc</item>
        <item name="android:textColorSecondary">#819ca9</item>
        <item name="android:navigationBarColor">@color/colorNavBar</item>


        <!-- PreferencesTheme ActionBar Style -->
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <!--item name="actionBarStyle">@style/ActionBar.Solid</item-->

        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">@color/colorAccent</item>
        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">#f1f1f1</item>
        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">#42221f1f</item>


    </style>

</resources>
